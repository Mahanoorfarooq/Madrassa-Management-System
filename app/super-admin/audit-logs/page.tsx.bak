"use client";

import { useEffect, useState } from "react";
import api from "@/utils/api";

interface LogRow {
  _id: string;
  action: string;
  entityType: string;
  createdAt: string;
  meta?: any;
  actorUserId?: { fullName: string; username: string; role: string };
}

export default function SAAuditLogsPage() {
  const [items, setItems] = useState<LogRow[]>([]);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);

  const load = async () => {
    setLoading(true);
    setError(null);
    try {
      const res = await api.get("/api/super-admin/audit-logs");
      setItems(res.data?.logs || []);
    } catch (e: any) {
      setError(e?.response?.data?.message || "لاگز لوڈ کرنے میں مسئلہ");
      setItems([]);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    load();
  }, []);

  return (
    <div className="space-y-4">
      <div className="flex items-center justify-between">
        <h1 className="text-xl font-semibold text-right">آڈٹ لاگز</h1>
        {loading && (
          <span className="text-xs text-slate-500">لوڈ ہو رہا ہے…</span>
        )}
      </div>
      {error && (
        <div className="bg-red-50 text-red-700 px-3 py-2 rounded text-sm text-right">
          {error}
        </div>
      )}

      <div className="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div className="overflow-x-auto">
          <table className="min-w-full text-right text-sm">
            <thead className="bg-slate-50">
              <tr>
                <th className="px-3 py-2">ایکشَن</th>
                <th className="px-3 py-2">Entity</th>
                <th className="px-3 py-2">By</th>
                <th className="px-3 py-2">تاریخ</th>
                <th className="px-3 py-2">IP</th>
              </tr>
            </thead>
            <tbody>
              {items.map((l) => (
                <tr key={l._id} className="border-t">
                  <td className="px-3 py-2">{l.action}</td>
                  <td className="px-3 py-2">{l.entityType}</td>
                  <td className="px-3 py-2">
                    {l.actorUserId?.fullName || l.actorUserId?.username || "-"}
                  </td>
                  <td className="px-3 py-2">
                    {new Date(l.createdAt).toLocaleString("ur-PK")}
                  </td>
                  <td className="px-3 py-2">{l.meta?.ip || "-"}</td>
                </tr>
              ))}
              {items.length === 0 && !loading && (
                <tr>
                  <td
                    colSpan={5}
                    className="px-3 py-6 text-center text-sm text-slate-500"
                  >
                    کوئی ریکارڈ موجود نہیں
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  );
}
